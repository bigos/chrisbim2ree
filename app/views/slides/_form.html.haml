= form_for @slide do |f|
  - if @slide.errors.any?
    #error_explanation
      %h2= "#{pluralize(@slide.errors.count, "error")} prohibited this slide from being saved:"
      %ul
        - @slide.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :caption
    = f.text_field :caption
  .field
    = f.label :position
    = f.number_field :position
  .field
    = f.label :visible
    = f.check_box :visible
  .field
    = f.label :photo_file_name
    = f.text_field :photo_file_name
  .field
    = f.label :photo_content_type
    = f.text_field :photo_content_type
  .field
    = f.label :photo_file_size
    = f.number_field :photo_file_size
  .field
    = f.label :photo_updated_at
    = f.datetime_select :photo_updated_at
  .actions
    = f.submit 'Save'
