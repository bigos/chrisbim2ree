#tags_wrapper{:style=>'float:right;'}
  %h3 Gallery Links
  %div#tags{:style=>'float:right;'}
    != tag_links(max_level = 1, :photos)


- columns = 3
- col = 0

%h3 Categories
%ul#category-photos
  - @tags.each do |tag|
    - child_count = tag.photos.size
    - if child_count >= 1
      - photo = tag.photo
      - if photo
        %li{:class => "col-#{col % columns}"}
          - html_fragment = capture_haml do
            %div.photo-frame
              .photo-div= image_tag photo.attachment.url(:medium)
              .caption= tag.name
          = link_to html_fragment, photos_path(:tag => tag.name)
        - col += 1

- if current_admin
  %h3 Tags
  #taglist
    != tag_links(1000, :tags, true)
  = link_to 'New Tag', new_tag_path if current_admin

