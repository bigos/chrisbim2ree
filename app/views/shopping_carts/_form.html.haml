= form_for @shopping_cart do |f|
  - if @shopping_cart.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shopping_cart.errors.count, "error")} prohibited this shopping_cart from being saved:"
      %ul
        - @shopping_cart.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer_token
    = f.text_field :customer_token
  .actions
    = f.submit 'Save'
