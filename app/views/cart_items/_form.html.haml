= form_for @cart_item do |f|
  - if @cart_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cart_item.errors.count, "error")} prohibited this cart_item from being saved:"
      %ul
        - @cart_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :shopping_cart_id
    = f.hidden_field :photo_id
  .field
    = f.label :quantity
    = f.select :quantity, options_for_select(1..10)
  .field
    = f.label :option
    = f.select :option, options_for_select(['A3','A4'])
  .actions
    = f.submit 'Save'
