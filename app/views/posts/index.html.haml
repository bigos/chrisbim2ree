= link_to 'New Post', new_post_path  if current_admin

%h3 Blog
- @posts.each do |post|  
  %div.post-teaser
    - unless post.published
      %span.published
        not published yet
    %p.post-date=  post.created_at.strftime("#{post.created_at.day.ordinalize} %b %Y")
    %h3.post-title= post.title

    %p{:style=>'clear:both;'}
      != post.teaser
      #teaser-more
        = link_to 'Read more', post
    - comments = Comment.where(:post_id => post.id).where(:published => true)
    - if comments.count > 0
      .comment-count
        = pluralize comments.count,  "comment"
    %div{:style=>'clear:both;'}
    - if current_admin
      %div.scaffold-bottom-links
        = link_to edit_post_path(post) do
          = button_tag 'Edit'
        - if post.published
          = link_to "/unpublish/post/#{post.id}" do
            = button_tag 'Unpublish'
        - else
          = link_to "/publish/post/#{post.id}" do 
            = button_tag 'Publish'
        
        = link_to post, :method => :delete, :data => { :confirm => 'Are you sure?' } do
          = button_tag 'Delete'
          
%div.scaffold-bottom-links
  = link_to 'New Post', new_post_path if current_admin
